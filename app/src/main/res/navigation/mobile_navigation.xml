<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_tasks">

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.sortabletodolist.sortabletodolistforandroid.ui.tasks.TaskFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/edit_dialog_fragment"
        android:name="com.sortabletodolist.sortabletodolistforandroid.ui.dialog.EditTaskDialogFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/dialog_edit_task" />

    <fragment
        android:id="@+id/dialog_button"
        android:name="com.sortabletodolist.sortabletodolistforandroid.ui.dialog.DialogFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_input_dialog" />
</navigation>